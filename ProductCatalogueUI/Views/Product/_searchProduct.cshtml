<h2 class="sub-header">Search Price For Product</h2>
<form class="form-horizontal">
    <div class="form-group">
        <label for="Id" class="control-label col-xs-2">Product Id</label>
        <div class="col-xs-10">
            <input type="number" class="form-control" id="inputProductId" placeholder="Enter Product Id" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button id="btn-search-product" type="submit" class="btn btn-primary" onclick="SearchProduct();">Search Product</button>
        </div>
    </div>
</form>