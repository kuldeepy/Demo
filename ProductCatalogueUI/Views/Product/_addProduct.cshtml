<h2 class="sub-header">Add Products</h2>
<form class="form-horizontal" id="form-add-Product">
    <div class="form-group">
        <label for="name" class="control-label col-xs-2">Name</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" id="inputName" placeholder="Enter Name" required>
        </div>
    </div>
    <div class="form-group">
        <label for="inputCategory" class="control-label col-xs-2">Category</label>
        <div class="col-xs-10">
            <input type="text" class="form-control" id="inputCategory" placeholder="Please Enter Category" required>
        </div>
    </div>
     <div class="form-group">
        <label for="inputPrice" class="control-label col-xs-2">Price</label>
        <div class="col-xs-10">
            <input type="number" class="form-control" id="inputPrice" placeholder="Please Enter Price" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button id="btn-add-product" type="submit" class="btn btn-primary" onclick="AddProduct();">Add Product</button>
        </div>
    </div>
</form>